{
  "name": "seo-simple-pack",
  "version": "1.0.0",
  "description": "WordPress プラグイン、[SEO SIMPLE PACK](https://wordpress.org/plugins/seo-simple-pack/)。",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:blocks && npm run build:js && npm run build:css",
    "build:css": "run-s scss postcss",
    "build:js": "run-s babel:media babel:common babel:ssp",
    "watch": "run-p watchs:css watch:js watch:blocks watch:lang",
    "watchs:css": "nodemon --watch src -e scss -x \"npm run build:css\"",
    "watch:js": "nodemon --watch src/js -e js -x \"npm run build:js\"",
    "babel:media": "babel src/js/mediauploader.js --out-file dist/js/mediauploader.js",
    "babel:common": "babel src/js/common.js --out-file dist/js/common.js",
    "babel:ssp": "babel src/js/ssp.js --out-file dist/js/ssp.js",
    "scss": "run-s scss:ssp scss:post scss:term scss:common",
    "scss:ssp": "node-sass src/scss/ssp.scss dist/css/ssp.css --importer node_modules/node-sass-globbing/index.js",
    "scss:common": "node-sass src/scss/common.scss dist/css/common.css --importer node_modules/node-sass-globbing/index.js",
    "scss:post": "node-sass src/scss/post.scss dist/css/post.css",
    "scss:term": "node-sass src/scss/term.scss dist/css/term.css",
    "postcss": "postcss dist/css/**/*.css -d dist/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://ddryo@github.com/ddryo/SEO-SIMPLE-PACK.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^5.0.0"
  },
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.7.0",
    "autoprefixer": "^9.8.6",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "node-sass-globbing": "0.0.23",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-wordpress": "^17.0.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config",
    "ie > 11"
  ]
}